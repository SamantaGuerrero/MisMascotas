<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/la"
        android:layout_width="360dp"
        android:layout_height="535dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/MisMascotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/mis_mascotas"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.574"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.078" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="304dp"
            app:srcCompat="@drawable/huella"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="188dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="375dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="146dp"
            android:layout_height="81dp"
            android:layout_marginStart="104dp"
            android:layout_marginLeft="104dp"
            android:text="@string/boton"
            android:textColor="#311B92"
            android:textSize="16sp"
            app:backgroundTint="@color/naranja"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteY="408dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/FAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MiBoton"
            android:clickable="true"
            android:contentDescription="@string/text_description"
            android:focusable="true"
            app:srcCompat="@android:drawable/btn_star_big_on"
            tools:layout_editor_absoluteX="315dp"
            tools:layout_editor_absoluteY="509dp" />

        <ImageButton
            android:id="@+id/camara"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@mipmap/camara"
            tools:layout_editor_absoluteX="315dp"
            tools:layout_editor_absoluteY="509dp"
            android:layout_gravity="center_horizontal">

        </ImageButton>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>